extends baselayout

block content
  body.body-with-navbar
    .navbar.navbar-fixed-top(role="navigation")
      .container
        .navbar-header
          button(type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse")
            span.sr-only Toggle navigation
            span.icon-bar
            span.icon-bar
            span.icon-bar
          p.navbar-brand.title-text the looks
        .navbar-collapse.collapse
          if user
            .navbar-right.navbar-form
              .form-group
                label.title-text Hi #{user.givenName}
              a.btn.btn-danger(href="/logout") Logout
          else
            form.navbar-form.navbar-right(role="form" method="post" action="/login")
              .form-group
                input(type="email" placeholder="Email" class="form-control" name="username")
              .form-group
                input(type="password" placeholder="Password" class="form-control" name="password")
              button.btn.btn-success(type="submit") Login

    block body



